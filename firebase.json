{
  "hosting": {
    "site": "react-todo-list-pwa",
    "public": "build",
    "predeploy": ["npm install","npm run build"],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
